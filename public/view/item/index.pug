if (count($items) == 0 && isset($page))	
	h2.center No items for category 
		b #{$page},
		br
		a.underline(data-back='') return to previous page

else
	unless isset($page)
		h1.center.recent Most recent items up for grabs
	if (isset($page))
		h1.center.recent Category: #{$page}
	
	.row
		.col.col--4-of-12
			each $item, $key in $items
				if ($key % 3 == 0)
					include ../layout/item
		.col.col--4-of-12
			each $item, $key in $items
				if ($key % 3 == 1)
					include ../layout/item
		.col.col--4-of-12
			each $item, $key in $items
				if ($key % 3 == 2)
					include ../layout/item