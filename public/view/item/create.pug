extends ../layout/page

block content

	- Render::form('', 'PUT', ['class' => 'row'])
		.col-2-of-2
			label title
		
		.col-2-of-2
			input(name="title")
		
		.col-2-of-2
			label description
		.col-2-of-2
			textarea(name="description")
				
		.col-2-of-2
			label categories
		.col-2-of-2
			select(multiple, name="cats[]"): each $cat in $global->cats_with_ids()
				option(value=$cat['id']) #{$cat['name']}
				
		.col-2-of-2
			input(type="submit", value="Create post")
	- Render::formend()